	"item": [
		{
			"name": "Auth/login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"try {",
							"    const json = pm.response.json();",
							"    ",
							"    if (json && json.token && typeof json.token === \"string\" && json.token.length > 0) {",
							"        pm.environment.set(\"token\", json.token);",
							"        ",
							"        pm.test(\"Token extracted and stored in environment\", () => {",
							"            pm.expect(json.token).to.be.a(\"string\").and.not.be.empty;",
							"            pm.expect(pm.environment.get(\"token\")).to.eql(json.token);",
							"        });",
							"    } else {",
							"        pm.test(\"Token not found in response\", () => {",
							"            pm.expect.fail(\"Response did not contain a valid 'token' field\");",
							"        });",
							"    }",
							"} catch (e) {",
							"    pm.test(\"Response is not valid JSON\", () => {",
							"        pm.expect.fail(\"Failed to parse response JSON: \" + e.message);",
							"    });",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
